<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="com.march.reaper.mvp.ui.activity.RegisterActivity">


    <EditText
        android:text="13611301719"
        android:textColor="@color/black"
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_round_rect_empty_colorprimary"
        android:gravity="center"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textSize="16sp" />

    <EditText
        android:textColor="@color/black"
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_round_rect_empty_colorprimary"
        android:gravity="center"
        android:hint="验证码(4位)"
        android:paddingLeft="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_get_code"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_round_rect_colorprimary"
        android:gravity="center"
        android:text="获取验证码"
        android:textSize="16sp" />


    <EditText
        android:textColor="@color/black"
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_round_rect_empty_colorprimary"
        android:gravity="center"
        android:hint="请输入密码(&lt;10位)"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_regis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_round_rect_colorprimary"
        android:text="注册"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="right"
        android:paddingTop="10dp"
        android:text="验证码服务由[掌淘科技]提供"
        android:textSize="13sp" />
</LinearLayout>
